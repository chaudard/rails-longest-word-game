<h1>NEW GAME</h1>
<div class="letters_container">
  <% @letters.each do |letter| %>
  <div>
    <%= letter %>
  </div>
  <% end %>
</div>
<form action="<%= score_path %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="attempt">What is the longest word you can find?</label><br>
  <input type="text" name="attempt" placeholder="Your proposition">
  <input id="grid" name="grid" type="hidden" value="<%= @letters.join %>" />
  <input type="submit" value="Play">
</form>
